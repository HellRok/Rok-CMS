<%= link_to 'New Page', new_site_page_path(@site), class: 'pure-button button-green' %>

<table class="pure-table pure-table-striped full-width">
  <thead>
    <tr>
      <th>Page</th>
      <th>Path</th>
      <th>Layout</th>
      <th>Updated By</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.path %></td>
        <td><%= page.layout %></td>
        <td><%= page.updated_by %></td>
        <td class="minimal">
          <%= link_to 'Edit', edit_page_path(page), class: 'pure-button button-orange' %>
          <%= link_to 'Delete', page_path(page), method: :delete,
            class: 'pure-button button-red', data: { confirm: 'Are you sure you want to delete this page?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


